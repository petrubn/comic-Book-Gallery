@model comic_Book_Gallery.Models.ComicBook

@{
    Layout = "_Layout";
    /*Model.SeriesTitle = Model.DisplayText;*/
    Model.SeriesTitle = Model.SeriesTitle;
    
    var seriesTitleTest = "Amazing Spider-Man"; /* @ViewBag - eventually */
}

@*
<h2>@Model.DisplayText</h2>
*@

<div class="row">
    <div class="col-md-6 well well-lg">
        <div class="well">
            
            <h5><label for="">Series Title: </label> @Model.SeriesTitle@*@ViewBag.seriesTitleTes*@</h5>
            <h5><label for="">Issue #:</label> @Model.IssueNumber</h5>
            <h5><label for="">Favorite: </label> @(Model.Favorite ? "Yes" : "No")</h5>

            @if (Model.Artists.Length > 0)
            {
                <h5>Artists: </h5>
                <div>
                    <ul>
                        @foreach (var artist in Model.Artists)
                        {
                            <li>@artist.Role: @artist.Name</li>
                        }
                    </ul>
                </div>
            }

        </div>
        <h5>Description</h5>
        
        <p>@Html.Raw(Model.DescriptionHtml)</p>
    </div>
    <div class="col-md-6">
        @*<img src="~/Images/@Model.CoverImageFileName" alt="@Model.DisplayText">*@
        <img src="~/Images/@Model.CoverImageFileName" class = "img-fluid" alt="@Model.DisplayText">
        </div>
</div>